<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_summary_login"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_Email_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_email"
        android:text="@string/title_email"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        app:cornerRadius="10dp"
        app:rippleColor="#33F8F5F5"
        />


    <Button
        android:id="@+id/btn_Google_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="@string/title_google"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        app:cornerRadius="10dp"
        app:rippleColor="#33F8F5F5"/>


    <Button
        android:id="@+id/btn_Facebook_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="@string/title_facebook"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        app:cornerRadius="10dp"
        app:rippleColor="#33F8F5F5"/>


    <Button
        android:id="@+id/btn_Instagram_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="@string/title_instagram"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        app:cornerRadius="10dp"
        app:rippleColor="#33F8F5F5"/>

</LinearLayout>