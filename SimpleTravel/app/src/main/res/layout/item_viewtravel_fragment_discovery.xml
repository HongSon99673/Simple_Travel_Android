<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_ViewTravel_Item_Discovery"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:src="@drawable/avartar1"
            android:scaleType="centerCrop"/>

        <RadioButton
            android:id="@+id/rdb_Choose_Item_Discovery"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_shape_round"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:visibility="visible"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/txt_Name_ViewTravel_Discovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_Location_ViewTravel_Discovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:textSize="20dp"
        />


</LinearLayout>