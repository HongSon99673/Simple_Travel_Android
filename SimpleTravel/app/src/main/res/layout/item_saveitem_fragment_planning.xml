<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/planning_saveitem_Layout"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="top">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/item_savedtitem_img_Avatar"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avartar1" />

                <RadioButton
                    android:id="@+id/item_savedtitem_rdb_Choose"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_shape_round"
                    android:visibility="visible" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="top|left"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/item_savedtitem_txt_NameType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:hint="Name Type"
                android:textSize="18dp"
                android:maxLines="1"
                android:background="@drawable/ic_shape_fames_dialog"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/item_savedtitem_txt_NameService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/saveitem_star_1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_outline_black_48"
                    />

                <ImageView
                    android:id="@+id/saveitem_star_2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_outline_black_48"
                    />

                <ImageView
                    android:id="@+id/saveitem_star_3"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_outline_black_48"
                    />

                <ImageView
                    android:id="@+id/saveitem_star_4"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_outline_black_48"
                    />

                <ImageView
                    android:id="@+id/saveitem_star_5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_star_outline_black_48"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/item_savedtitem_txt_Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Summary"
                android:maxLines="1"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/item_savedtitem_txt_TimeOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="TimeOpen"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/item_savedtitem_txt_NamePlan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:maxLines="1"
            android:hint="Name Trip"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/planning_item_Delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_baseline_delete_24"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        />
</LinearLayout>