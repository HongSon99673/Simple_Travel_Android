<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backround_dialog"
    android:layout_gravity="center"
    android:padding="20dp"
    android:orientation="vertical">

    <View
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@color/INK_grey"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_create_trip"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_Name_Trip"
        android:textSize="18dp"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/dialog_txt_NameTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: Cuối tuần ở NYC"
        android:textSize="20dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/ic_shape_fames_dialog"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/INK_grey"/>

    <Button
        android:id="@+id/dialog_btn_CreateTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_create_trip"
        android:backgroundTint="@color/black"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cornerRadius="20dp"
        app:strokeWidth="2dp"
        />





</LinearLayout>