<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/discovery_location_Layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/discovery_location_Img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/avartar1" />

            <RadioButton
                android:id="@+id/rdb_Choose_Item_Discovery"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:background="@drawable/ic_shape_round"
                android:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/discovery_location_txt_NameLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:maxLines="1"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/discovery_location_star_1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_outline_black_48" />

            <ImageView
                android:id="@+id/discovery_location_star_2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_outline_black_48" />

            <ImageView
                android:id="@+id/discovery_location_star_3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_outline_black_48" />

            <ImageView
                android:id="@+id/discovery_location_star_4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_outline_black_48" />

            <ImageView
                android:id="@+id/discovery_location_star_5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_outline_black_48" />

            <TextView
                android:id="@+id/discovery_location_Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/discovery_location_txt_Summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Summary"
            android:maxLines="1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/discovery_location_txt_Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Status"
            android:maxLines="1"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>