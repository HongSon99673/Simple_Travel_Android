<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".ui.evaluate.SearchItemRatingFragment">

    <TextView
        android:id="@+id/evaluate_txt_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back1"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textStyle="bold"
        android:text="@string/title_Ratings"
        android:layout_marginBottom="5dp"/>

    <AutoCompleteTextView
        android:id="@+id/evaluate_ATC_Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Tìm kiếm"
        android:maxLines="1"
        android:maxLength="30"
        android:drawableLeft="@drawable/ic_search_main"
        android:background="@drawable/ic_shape_round"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_recently"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/evaluate_item_lv_Recently"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>